@using Microsoft.AspNetCore.Identity;
@model IEnumerable<IdentityRole>

@{ 
    ViewBag.Title = "All Roles";
}
<a class="btn btn-primary mb-3" style="width:auto" asp-action="CreateRole" asp-controller="administration">Add new role</a>

    <h1>All Roles</h1>
@if (Model.Any())
{
    foreach(var role in Model)
    {
        <div class="card mb-3">
            <div class="card-header">
                Role Id : @role.Id
            </div>
            <div class="card-body">
                <h5 class="card-title">@role.Name</h5>
            </div>
            <div class="card-footer">
                <a class="btn btn-primary" asp-action="EditRole" asp-controller="Administration" asp-route-id="@role.Id">edit</a>
                <a href="#" class="btn btn-danger">delete</a>

            </div>
        </div>
    }
}

else
{
    <div class="card">
        <div class="card-header">
            No roles created yet!

        </div>
        <div class="card-body">
            <h5 class="card-title">
                Use the button below to create a role!
            </h5>
        </div>
        <a class="btn btn-primary" style="width:auto" asp-controller="adminstration" asp-action="CreateRole">
            Create Role
        </a>
    </div>
}
